{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "metrics-grafanadata",
        "labels": {
            "name": "metrics-grafanadata"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}

{
    "apiVersion": "v1",
