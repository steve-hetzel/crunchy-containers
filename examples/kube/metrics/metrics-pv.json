    "metadata": {
        "name": "metrics-prometheusdata",
        "labels": {
            "name": "metrics-prometheusdata"
        }
    },
    "spec": {
        "capacity": {
            "storage": "$CCP_STORAGE_CAPACITY"
        },
        "accessModes": ["$CCP_STORAGE_MODE"],
        "hostPath": {
            "path": "$CCP_STORAGE_PATH"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}
