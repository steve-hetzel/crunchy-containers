{
    "kind": "Template",
    "apiVersion": "v1",
    "message": "The following service(s) have been created in your project: ${SERVICE_NAME}.\n\n\tPG Username: ${PG_USER}\n\tPG Password: ${PG_PASSWORD}\n\tPG Admin User: ${PG_PRIMARY_USER}\n\tPG Admin Password: ${PG_PRIMARY_PASSWORD}\n\tPG Administrator Password: ${PG_ROOT_PASSWORD}",
    "name": "crunchy-postgres-with-pgpool-template",
    "labels": {
        "template": "crunchy-postgres-with-pgpool-template"
    },
    "metadata": {
        "name": "crunchy-postgres-with-pgpool-template",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Database with pgPool, a connection pooler and load balancer for PostgreSQL databases.",
            "iconClass": "icon-postgresql",
            "tags": "database,postgresql",
            "openshift.io/display-name": "Crunchy PostgreSQL with pgPool",
            "openshift.io/documentation-url": "https://github.com/CrunchyData/crunchy-containers/tree/master/docs",
            "openshift.io/long-description": "Crunchy PostgreSQL Database with pgPool, a connection pooler and load balancer for PostgreSQL databases.",
            "openshift.io/provider-display-name": "Crunchy Data",
            "openshift.io/support-url": "https://github.com/CrunchyData/crunchy-containers"
        }
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Secret",
            "metadata": {
                "name": "${SERVICE_NAME}"
            },
            "stringData": {
                "PG_PASSWORD": "${PG_PASSWORD}",
                "PG_PRIMARY_PASSWORD": "${PG_PRIMARY_PASSWORD}",
                "PG_ROOT_PASSWORD": "${PG_ROOT_PASSWORD}"
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-primary"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteMany"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-replica"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteMany"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "name": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "pgpoolport",
                        "protocol": "TCP",
                        "port": 6543,
                        "targetPort": 5432,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${SERVICE_NAME}"
                },
                "portalIP": "None",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "name": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "pgpool",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-pgpool:${CCP_IMAGE_TAG}",
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "PG_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "${PG_DATABASE}"
                            },
                            {
                                "name": "PG_USERNAME",
                                "value": "${PG_USER}"
                            },
                            {
                                "name": "PG_PRIMARY_SERVICE_NAME",
                                "description": "The primary configured in pgpool",
                                "value": "${SERVICE_NAME}-primary"
                            },
                            {
                                "name": "PG_REPLICA_SERVICE_NAME",
                                "description": "The replica configured in pgpool",
                                "value": "${SERVICE_NAME}-replica"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgconf",
                                "name": "pgconf",
                                "readOnly": true
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "pgconf",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-primary",
                "labels": {
                    "name": "${SERVICE_NAME}-primary"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "primary",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${SERVICE_NAME}-primary"
                },
                "portalIP": "None",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-primary",
                "labels": {
                    "name": "${SERVICE_NAME}-primary"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "postgres",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "imagePullPolicy": "Always",
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "PG_USER",
                                "value": "${PG_USER}"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_USER",
                                "value": "${PG_PRIMARY_USER}"
                            },
                            {
                                "name": "PG_PRIMARY_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PRIMARY_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_ROOT_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_ROOT_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "${PG_PRIMARY_PORT}"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "${PG_DATABASE}"
                            },
                            {
                                "name": "PG_MODE",
                                "value": "primary"
                            },
                            {
                                "name": "PGHOST",
                                "value": "/tmp"
                            }
                        ],
                        "securityContext": {
                            "capabilities": {}
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${SERVICE_NAME}-primary"
                        }
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-replica",
                "labels": {
                    "name": "${SERVICE_NAME}-replica"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "replica",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${SERVICE_NAME}-replica"
                },
                "portalIP": "None",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-replica",
                "labels": {
                    "name": "${SERVICE_NAME}-replica"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "postgres",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "imagePullPolicy": "Always",
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "PG_USER",
                                "value": "${PG_USER}"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_USER",
                                "value": "${PG_PRIMARY_USER}"
                            },
                            {
                                "name": "PG_PRIMARY_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PRIMARY_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_ROOT_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_ROOT_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "${PG_PRIMARY_PORT}"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "${PG_DATABASE}"
                            },
                            {
                                "name": "PG_MODE",
                                "value": "replica"
                            },
                            {
                                "name": "PGHOST",
                                "value": "/tmp"
                            },
                            {
                                "name": "PG_PRIMARY_HOST",
                                "value": "${SERVICE_NAME}-primary"
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "${PG_PRIMARY_PORT}"
                            }
                        ],
                        "securityContext": {
                            "capabilities": {}
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${SERVICE_NAME}-replica"
                        }
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "displayName": "Container Image Tag",
            "name": "CCP_IMAGE_TAG",
            "value": "centos7-10.3-1.8.2",
            "description": "Image version to pull",
            "required": true
        },
        {
            "displayName": "Container Image Repository",
            "name": "CCP_IMAGE_PREFIX",
            "value": "crunchydata",
            "description": "Repository prefix to pull the container image from",
            "required": true
        },
        {
            "name": "SERVICE_NAME",
            "description": "The name to use for the service and container",
            "value": "pgpool",
            "required": true
        },
        {
            "name": "PG_USER",
            "description": "The username that clients will use to connect to PG server",
            "value": "testuser",
            "required": true
        },
        {
            "name": "PG_PASSWORD",
            "description": "The password for the PG primary user",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{20}",
            "required": true
        },
        {
            "name": "PG_DATABASE",
            "description": "The name of the database that will be created",
            "value": "userdb",
            "required": true
        },
        {
            "name": "PG_PRIMARY_USER",
            "description": "The username used for primary / replica replication",
            "value": "primaryuser",
            "required": true
        },
        {
            "name": "PG_PRIMARY_PASSWORD",
            "description": "The password for the PG primary user",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{20}",
            "required": true
        },
        {
            "name": "PG_PRIMARY_PORT",
            "description": "The postgresql port",
            "value": "5432",
            "required": true
        },
        {
            "name": "PG_ROOT_PASSWORD",
            "description": "The password for the PG administrator",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{20}",
            "required": true
        },
        {
            "description": "Volume space available for data, e.g. 512Mi, 2Gi.",
            "displayName": "Volume Capacity",
            "name": "VOLUME_CAPACITY",
            "required": true,
            "value": "100Mi"
        }
    ]
}
