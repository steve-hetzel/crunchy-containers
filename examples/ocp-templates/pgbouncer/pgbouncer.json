{
    "kind": "Template",
    "apiVersion": "v1",
    "message": "The following service(s) have been created in your project: ${SERVICE_NAME}.\n\nPG Database: ${PG_DATABASE}\nPG Username: ${PG_USER}\nPG Password: ${PG_PASSWORD}\nPG Primary User: ${PG_PRIMARY_USER}\nPG Primary Password: ${PG_PRIMARY_PASSWORD}",
    "name": "crunchy-postgres-with-pgbouncer-template",
    "labels": {
        "template": "crunchy-postgres-with-pgbouncer-template"
    },
    "metadata": {
        "name": "crunchy-postgres-with-pgbouncer-template",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Database with pgBouncer, a lightweight connection pooler for PostgreSQL databases.",
            "iconClass": "icon-postgresql",
            "tags": "database,postgresql",
            "openshift.io/display-name": "Crunchy PostgreSQL with pgBouncer",
            "openshift.io/documentation-url": "https://github.com/CrunchyData/crunchy-containers/tree/master/docs",
            "openshift.io/long-description": "Crunchy PostgreSQL Database with pgBouncer, a lightweight connection pooler for PostgreSQL databases.",
            "openshift.io/provider-display-name": "Crunchy Data",
            "openshift.io/support-url": "https://github.com/CrunchyData/crunchy-containers"
        }
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "ConfigMap",
            "metadata": {
                "name": "pgbouncer-configs"
            },
            "data": {
                "users.txt": "\"${PG_USER}\" \"${PG_PASSWORD}\"",
                "pgbouncer.ini": "[databases]\nprimary = host=${SERVICE_NAME}-primary port=${PG_PRIMARY_PORT} dbname=${PG_DATABASE}\nreplica = host=${SERVICE_NAME}-replica port=${PG_PRIMARY_PORT} dbname=${PG_DATABASE}\n[pgbouncer]\nlisten_port = 5432\nlisten_addr = *\nauth_type = md5\nauth_file = /pgconf/bouncerconfig/users.txt\nlogfile = /tmp/pgbouncer.log\npidfile = /tmp/pgbouncer.pid\nadmin_users = ${PG_USER}\nmax_db_connections = ${MAX_DB_CONNECTIONS}\ndefault_pool_size = ${DEFAULT_POOL_SIZE}\n"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Secret",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "annotations": {
                    "template.openshift.io/expose-db_name": "{.data['PG_NAME']}",
                    "template.openshift.io/expose-db_password": "{.data['PG_PASSWORD']}",
                    "template.openshift.io/expose-db_user": "{.data['PG_USER']}"
                }
            },
            "stringData": {
                "PG_USER": "${PG_USER}",
                "PG_NAME": "${PG_DATABASE}",
                "PG_PASSWORD": "${PG_PASSWORD}",
                "PG_PRIMARY_USER": "${PG_PRIMARY_USER}",
                "PG_PRIMARY_PASSWORD": "${PG_PRIMARY_PASSWORD}",
                "PG_ROOT_PASSWORD": "${PG_ROOT_PASSWORD}"
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-primary"
            },
            "spec": {
                "accessModes": [
                    "${VOLUME_ACCESS_MODE}"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-replica"
            },
            "spec": {
                "accessModes": [
                    "${VOLUME_ACCESS_MODE}"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "name": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "bouncerport",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${SERVICE_NAME}"
                },
                "portalIP": "None",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "name": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "pgbouncer",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-pgbouncer:${CCP_IMAGE_TAG}",
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "PG_DATABASE",
                                "value": "${PG_DATABASE}"
                            },
                            {
                                "name": "PG_PRIMARY_USER",
                                "value": "${PG_PRIMARY_USER}"
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "description": "The primary port configured in pgbouncer",
                                "value": "${PG_PRIMARY_PORT}"
                            },
                            {
                                "name": "PG_PRIMARY_SERVICE",
                                "description": "The primary configured in pgbouncer",
                                "value": "${SERVICE_NAME}-primary"
                            },
                            {
                                "name": "PG_REPLICA_SERVICE",
                                "description": "The replica configured in pgbouncer",
                                "value": "${SERVICE_NAME}-replica"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgconf/bouncerconfig",
                                "name": "pgbouncer-conf",
                                "readOnly": true
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "pgbouncer-conf",
                        "configMap": {
                            "name": "pgbouncer-configs"
                        }
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-primary",
                "labels": {
                    "name": "${SERVICE_NAME}-primary"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "primary",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${SERVICE_NAME}-primary"
                },
                "portalIP": "None",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-primary",
                "labels": {
                    "name": "${SERVICE_NAME}-primary"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "postgres",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "imagePullPolicy": "Always",
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "PG_USER",
                                "value": "${PG_USER}"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_USER",
                                "value": "${PG_PRIMARY_USER}"
                            },
                            {
                                "name": "PG_PRIMARY_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PRIMARY_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_ROOT_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_ROOT_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "${PG_PRIMARY_PORT}"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "${PG_DATABASE}"
                            },
                            {
                                "name": "PG_MODE",
                                "value": "primary"
                            },
                            {
                                "name": "PGHOST",
                                "value": "/tmp"
                            }
                        ],
                        "securityContext": {
                            "capabilities": {}
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/pgconf",
                                "name": "pgconf",
                                "readOnly": true
                            },
                            {
                                "mountPath": "/pgwal",
                                "name": "pgwal",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backup",
                                "name": "backup",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/recover",
                                "name": "recover",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backrestrepo",
                                "name": "backrestrepo",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/sshd",
                                "name": "sshd",
                                "readOnly": false
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${SERVICE_NAME}-primary"
                        }
                    },
                    {
                        "name": "pgconf",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "pgwal",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "backup",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "recover",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "backrestrepo",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "sshd",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-replica",
                "labels": {
                    "name": "${SERVICE_NAME}-replica"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "replica",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${SERVICE_NAME}-replica"
                },
                "portalIP": "None",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-replica",
                "labels": {
                    "name": "${SERVICE_NAME}-replica"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "postgres",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "imagePullPolicy": "Always",
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "PG_USER",
                                "value": "${PG_USER}"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_USER",
                                "value": "${PG_PRIMARY_USER}"
                            },
                            {
                                "name": "PG_PRIMARY_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PRIMARY_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_ROOT_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_ROOT_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "${PG_PRIMARY_PORT}"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "${PG_DATABASE}"
                            },
                            {
                                "name": "PG_MODE",
                                "value": "replica"
                            },
                            {
                                "name": "PGHOST",
                                "value": "/tmp"
                            },
                            {
                                "name": "PG_PRIMARY_HOST",
                                "value": "${SERVICE_NAME}-primary"
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "${PG_PRIMARY_PORT}"
                            }
                        ],
                        "securityContext": {
                            "capabilities": {}
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/pgconf",
                                "name": "pgconf",
                                "readOnly": true
                            },
                            {
                                "mountPath": "/pgwal",
                                "name": "pgwal",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backup",
                                "name": "backup",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/recover",
                                "name": "recover",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backrestrepo",
                                "name": "backrestrepo",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/sshd",
                                "name": "sshd",
                                "readOnly": false
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${SERVICE_NAME}-replica"
                        }
                    },
                    {
                        "name": "pgconf",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "pgwal",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "backup",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "recover",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "backrestrepo",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "sshd",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "description": "Volume space available for data, e.g. 512Mi, 2Gi.",
            "displayName": "Volume Capacity",
            "name": "VOLUME_CAPACITY",
            "required": true,
            "value": "1Gi"
        },
        {
            "description": "Volume access mode e.g. ReadWriteOnce, ReadWriteMany.",
            "displayName": "Volume Access Mode",
            "name": "VOLUME_ACCESS_MODE",
            "required": true,
            "value": "ReadWriteOnce"
        },
        {
            "displayName": "Container Image Tag",
            "name": "CCP_IMAGE_TAG",
            "value": "centos7-10.4-1.8.3",
            "description": "Image version to pull",
            "required": true
        },
        {
            "displayName": "Container Image Repository",
            "name": "CCP_IMAGE_PREFIX",
            "value": "crunchydata",
            "description": "Repository prefix to pull the container image from",
            "required": true
        },
        {
            "name": "SERVICE_NAME",
            "description": "The name to use for the service and container",
            "value": "crunchy-pgbouncer",
            "required": true
        },
        {
            "displayName": "PVC Name",
            "name": "PVC_NAME",
            "from": "crunchy-pgbouncer-[a-z0-9]{5}",
            "generate": "expression",
            "description": "Name of the PVC to claim on the primary",
            "required": true
        },
        {
            "name": "PG_USER",
            "description": "The username that clients will use to connect to PG server",
            "from": "user[a-z0-9]{5}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "PG_PASSWORD",
            "description": "The password for the PG primary user",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{20}",
            "required": true
        },
        {
            "name": "PG_DATABASE",
            "description": "The name of the database that will be created",
            "value": "userdb",
            "required": true
        },
        {
            "name": "PG_PRIMARY_USER",
            "description": "The username used for primary / replica replication",
            "value": "primaryuser",
            "required": true
        },
        {
            "name": "PG_PRIMARY_PASSWORD",
            "description": "The password for the PG primary user",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{20}",
            "required": true
        },
        {
            "name": "PG_PRIMARY_PORT",
            "description": "The postgresql port",
            "value": "5432",
            "required": true
        },
        {
            "name": "PG_ROOT_PASSWORD",
            "description": "The password for the PG administrator",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{20}",
            "required": true
        },
        {
            "name": "TEMP_BUFFERS",
            "description": "PostgreSQL temp_buffers size",
            "required": false,
            "value": "9MB"
        },
        {
            "name": "MAX_CONNECTIONS",
            "description": "postgres max_connections value",
            "required": false,
            "value": "20"
        },
        {
            "name": "SHARED_BUFFERS",
            "description": "PostgreSQL shared_buffers size",
            "required": true,
            "value": "128MB"
        },
        {
            "name": "MAX_WAL_SENDERS",
            "description": "PostgreSQL max_wal_senders value",
            "required": true,
            "value": "10"
        },
        {
            "name": "WORK_MEM",
            "description": "PostgreSQL work_mem size",
            "required": false,
            "value": "5MB"
        }
    ]
}
