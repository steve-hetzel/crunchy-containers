{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgbouncer",
        "labels": {
            "name": "pgbouncer"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 6543,
                "targetPort": 6543,
                "nodePort": 0
            }
        ],
        "selector": {
            "name": "pgbouncer"
        }
    },
    "status": {
        "loadBalancer": {}
    }
}

{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgbouncer",
        "labels": {
            "name": "pgbouncer"
        }
    },
    "spec": {
        "securityContext": {
            $CCP_SECURITY_CONTEXT
        },
        "volumes": [
            {
                "name": "pgconf",
                "configMap": {
                    "name": "pgbouncer-pgconf"
                }
            }
        ],
        "containers": [
            {
                "name": "pgbouncer",
                "image": "$CCP_IMAGE_PREFIX/crunchy-pgbouncer:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 6543,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                ],
                "volumeMounts": [
                    {
                        "name": "pgconf",
                        "mountPath": "/pgconf/bouncerconfig"
                    }
                ]
            }
        ]
    }
}
