{
    "kind": "Template",
    "apiVersion": "v1",
    "message": "The following service(s) have been created in your project: ${SERVICE_NAME}.\n\nPG Database: ${PG_DATABASE}\nPG Username: ${PG_USER}\nPG Password: ${PG_PASSWORD}\nPG Primary User: ${PG_PRIMARY_USER}\nPG Primary Password: ${PG_PRIMARY_PASSWORD}",
    "name": "crunchy-postgres-primary-restore-template",
    "metadata": {
        "name": "crunchy-postgres-primary-restore-template",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL restored from pg_basebackup's created by the Crunchy Backup template.",
            "iconClass": "icon-postgresql",
            "tags": "database,postgresql",
            "openshift.io/display-name": "Crunchy PostgreSQL Restore",
            "openshift.io/documentation-url": "https://github.com/CrunchyData/crunchy-containers/tree/master/docs",
            "openshift.io/long-description": "Crunchy PostgreSQL restored from pg_basebackup's created by the Crunchy Backup template.",
            "openshift.io/provider-display-name": "Crunchy Data",
            "openshift.io/support-url": "https://github.com/CrunchyData/crunchy-containers"
        }
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Secret",
            "metadata": {
                "name": "${SERVICE_NAME}",
                "labels": {
                    "name": "${SERVICE_NAME}",
                    "app": "${SERVICE_NAME}"
                },
                "annotations": {
                    "template.openshift.io/expose-db_name": "{.data['PG_DATABASE']}",
                    "template.openshift.io/expose-db_password": "{.data['PG_PASSWORD']}",
                    "template.openshift.io/expose-db_user": "{.data['PG_USER']}"
                }
            },
            "stringData": {
                "PG_USER": "${PG_USER}",
                "PG_DATABASE": "${PG_DATABASE}",
                "PG_PASSWORD": "${PG_PASSWORD}",
                "PG_PRIMARY_USER": "${PG_PRIMARY_USER}",
                "PG_PRIMARY_PASSWORD": "${PG_PRIMARY_PASSWORD}",
                "PG_ROOT_PASSWORD": "${PG_ROOT_PASSWORD}"
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-primary",
                "labels": {
                    "name": "${SERVICE_NAME}-primary",
                    "app": "${SERVICE_NAME}"
                },
                "annotations": {
                    "template.openshift.io/expose-uri": "postgres://{.spec.clusterIP}:{.spec.ports[?(.name==\"postgresql-primary\")].port}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "postgresql-primary",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${SERVICE_NAME}-primary"
                }
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${PGDATA_PVC_NAME}",
                "app": "${SERVICE_NAME}"
            },
            "spec": {
                "accessModes": [
                    "${VOLUME_ACCESS_MODE}"
                ],
                "storageClassName": "${VOLUME_STORAGE_CLASS}",
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SERVICE_NAME}-primary",
                "labels": {
                    "name": "${SERVICE_NAME}-primary",
                    "app": "${SERVICE_NAME}"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "${SERVICE_NAME}-primary",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 2
                        },
                        "imagePullPolicy": "Always",
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "PG_USER",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_USER",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_USER",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PRIMARY_USER",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_PRIMARY_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_ROOT_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_ROOT_PASSWORD",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_DATABASE",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "key": "PG_DATABASE",
                                        "name": "${SERVICE_NAME}"
                                    }
                                }
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "${PG_PRIMARY_PORT}"
                            },
                            {
                                "name": "PG_MODE",
                                "value": "primary"
                            },
                            {
                                "name": "PGHOST",
                                "value": "/tmp"
                            },
                            {
                                "name": "TEMP_BUFFERS",
                                "value": "${TEMP_BUFFERS}"
                            },
                            {
                                "name": "MAX_CONNECTIONS",
                                "value": "${MAX_CONNECTIONS}"
                            },
                            {
                                "name": "SHARED_BUFFERS",
                                "value": "${SHARED_BUFFERS}"
                            },
                            {
                                "name": "MAX_WAL_SENDERS",
                                "value": "${MAX_WAL_SENDERS}"
                            },
                            {
                                "name": "WORK_MEM",
                                "value": "${WORK_MEM}"
                            },
                            {
                                "name": "BACKUP_PATH",
                                "value": "${BACKUP_HOSTNAME}-backups/${BACKUP_DATE}"
                            }
                        ],
                        "resources": {},
                        "securityContext": {
                            "capabilities": {},
                            "privileged": false
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/pgconf",
                                "name": "pgconf",
                                "readOnly": true
                            },
                            {
                                "mountPath": "/pgwal",
                                "name": "pgwal",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backup",
                                "name": "backup",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/recover",
                                "name": "recover",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backrestrepo",
                                "name": "backrestrepo",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/sshd",
                                "name": "sshd",
                                "readOnly": true
                            }
                        ],
                        "restartPolicy": "Always"
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${PGDATA_PVC_NAME}"
                        }
                    },
                    {
                        "name": "pgconf",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "pgwal",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "backup",
                        "persistentVolumeClaim": {
                            "claimName": "${BACKUP_PVC_NAME}"
                        }
                    },
                    {
                        "name": "recover",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "backrestrepo",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "sshd",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "description": "Name of the volume storage class to use, e.g. ebs, gluster",
            "displayName": "Volume Storage Class",
            "name": "VOLUME_STORAGE_CLASS",
            "required": true
        },
        {
            "description": "Volume space available for data, e.g. 512Mi, 2Gi.",
            "displayName": "Volume Capacity",
            "name": "VOLUME_CAPACITY",
            "required": true,
            "value": "1Gi"
        },
        {
            "description": "Volume access mode e.g. ReadWriteOnce, ReadWriteMany.",
            "displayName": "Volume Access Mode",
            "name": "VOLUME_ACCESS_MODE",
            "required": true,
            "value": "ReadWriteOnce"
        },
        {
            "displayName": "PGData PVC Name",
            "name": "PGDATA_PVC_NAME",
            "from": "crunchy-postgres-[a-z0-9]{5}-pgdata",
            "generate": "expression",
            "description": "Name of the PVC to claim on the primary pgdata directory.",
            "required": true
        },
        {
            "displayName": "Backup PVC Name",
            "name": "BACKUP_PVC_NAME",
            "description": "Name of the existing PVC that contains backups for PostgreSQL.",
            "required": true
        },
        {
            "name": "BACKUP_DATE",
            "description": "The date of the backup folder to restore from (check folders on backup PVC), e.g. 2018-04-05-22-31-58",
            "required": true
        },
        {
            "name": "BACKUP_HOSTNAME",
            "description": "The hostname of the database you want to restore from, e.g. crunchy-postgres-primary",
            "required": true
        },
        {
            "name": "PG_USER",
            "description": "The username that clients will use to connect to PG server",
            "required": true
        },
        {
            "name": "PG_PASSWORD",
            "description": "The password for the PG primary user",
            "required": true
        },
        {
            "name": "PG_DATABASE",
            "description": "The name of the database that will be created",
            "value": "userdb",
            "required": true
        },
        {
            "name": "PG_PRIMARY_USER",
            "description": "The username used for primary / replica replication",
            "value": "primaryuser",
            "required": true
        },
        {
            "name": "PG_PRIMARY_PASSWORD",
            "description": "The password for the PG primary user",
            "required": true
        },
        {
            "name": "PG_ROOT_PASSWORD",
            "description": "The password for the PG administrator",
            "required": true
        },
        {
            "displayName": "Container Image Tag",
            "name": "CCP_IMAGE_TAG",
            "value": "centos7-10.4-1.8.3",
            "description": "Image version to pull",
            "required": true
        },
        {
            "displayName": "Container Image Repository",
            "name": "CCP_IMAGE_PREFIX",
            "value": "crunchydata",
            "description": "Repository prefix to pull the container image from",
            "required": true
        },
        {
            "name": "SERVICE_NAME",
            "description": "The name to use for the service and container",
            "value": "crunchy-postgres-restore",
            "required": true
        },
        {
            "name": "PG_PRIMARY_PORT",
            "description": "The postgresql port",
            "value": "5432",
            "required": true
        },
        {
            "name": "TEMP_BUFFERS",
            "description": "PostgreSQL temp_buffers size",
            "required": false,
            "value": "9MB"
        },
        {
            "name": "MAX_CONNECTIONS",
            "description": "postgres max_connections value",
            "required": false,
            "value": "20"
        },
        {
            "name": "SHARED_BUFFERS",
            "description": "PostgreSQL shared_buffers size",
            "required": true,
            "value": "128MB"
        },
        {
            "name": "MAX_WAL_SENDERS",
            "description": "PostgreSQL max_wal_senders value",
            "required": true,
            "value": "10"
        },
        {
            "name": "WORK_MEM",
            "description": "PostgreSQL work_mem size",
            "required": false,
            "value": "5MB"
        }
    ]
}
