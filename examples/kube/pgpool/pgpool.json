{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgpool",
        "labels": {
            "name": "pgpool"
        }
    },
    "spec": {
        "ports": [{
            "protocol": "TCP",
            "port": 5432,
            "targetPort": 5432,
            "nodePort": 0
        }],
        "selector": {
            "name": "pgpool"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "pgpool",
        "labels": {
            "name": "pgpool"
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "pgpool"
                }
            },
            "spec": {

                "containers": [{
                    "name": "pgpool",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-pgpool:$CCP_IMAGE_TAG",
                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "env": [],
                    "volumeMounts": [{
                    "name": "pgpool-pgconf",
                    "mountPath": "/pgconf/pgpoolconfigdir",
                    "readOnly": false
                    }]
                }],
                "volumes": [{
                "name": "pgpool-pgconf",
                  "secret": {
                      "secretName": "pgpool-secrets"
                  }
                }],
                "restartPolicy": "Always",
                "dnsPolicy": "ClusterFirst"
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
