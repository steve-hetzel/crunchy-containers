{
   "kind":"Job",
   "apiVersion":"batch/v1",
   "metadata":{
      "name":"pgstigcheck-inspec-job"
   },
   "spec":{
      "template":{
         "metadata":{
            "name":"pgstigcheck-inspec-job",
            "labels":{
               "app":"pgstigcheck-inspec-job"
            }
         },
         "spec":{
            "volumes":[
               {
                  "name":"nfsfileshare",
                  "persistentVolumeClaim":{
                     "claimName":"pgstigcheck-inspec-pvc"
                  }
               },
               {
                  "name":"dockersock",
                  "hostPath":{
                     "path":"/run/docker.sock",
                     "type":"File"
                  }
               }
            ],
            "containers":[
               {
                  "name":"pgstigcheck-inspec-job",
                  "image":"$CCP_IMAGE_PREFIX/pgstigcheck-inspec:$CCP_IMAGE_TAG",
                  "volumeMounts":[
                     {
                        "mountPath":"/mnt/nfsfileshare",
                        "name":"nfsfileshare",
                        "readOnly":false
                     },
                     {
                        "mountPath":"/run/docker.sock",
                        "name":"dockersock",
                        "readOnly":true
                     }
                  ],
                  "env":[
                     {
                        "name":"CONTAINER_NAME",
                        "value":"pgstigcheck-inspec"
                     },
                     {
                        "name":"STIG_PODNAME",
                        "value":"$STIG_PODNAME"
                     },
                     {
                        "name":"STIGCHECK_RESULTSPATH",
                        "value":"$STIGCHECK_RESULTSPATH"
                     },
                     {
                        "name":"STIG_DOCKERID",
                        "value":"$STIG_DOCKERID"
                     }
                  ]
               }
            ],
            "restartPolicy":"Never"
         }
      }
   }
}
